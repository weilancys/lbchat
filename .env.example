# ===========================================
# LBChat Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=lbchat
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=lbchat

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================================
# MinIO (S3-Compatible Storage)
# ===========================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_minio_secret_key_here
MINIO_BUCKET=lbchat-files
MINIO_USE_SSL=false

# ===========================================
# File Upload Limits
# ===========================================
MAX_FILE_SIZE=52428800
MAX_IMAGE_SIZE=10485760

# ===========================================
# TURN Server (WebRTC video/audio calls)
# ===========================================
# Replace YOUR_SERVER_PUBLIC_IP with your VPS's public IP address
# The password must match what's in coturn/turnserver.conf
TURN_SERVER_URL=turn:YOUR_SERVER_PUBLIC_IP:3478
TURN_USERNAME=lbchat
TURN_PASSWORD=change_this_turn_password

# ===========================================
# Push Notifications (VAPID)
# ===========================================
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@yourdomain.com

# ===========================================
# Application
# ===========================================
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ===========================================
# Domain (for SSL/HTTPS)
# ===========================================
# Set your domain here (e.g., yourname.duckdns.org)
# Leave empty for HTTP-only mode (no video chat)
DOMAIN=
